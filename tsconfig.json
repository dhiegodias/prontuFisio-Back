{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": false,
    "outDir": "./build",                          
    "rootDir": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  }
}